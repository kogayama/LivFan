.AccountPage
  .AccountPage__header

  .SigninPage__main
    .SigninPage__main__nothing
      %p
      アカウントをお持ちでない方はこちら
      = link_to new_user_registration_path, class: "link-signup" do
        新規会員登録

    .SigninPage__main__sns
      = link_to "#", class: "with-facebook btn-normal"  do
        = icon('fab', 'facebook-square', class: "icon-sns")
        Facabookでログイン

    .SigninPage__main__form
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .SigninPage-notification
          - flash.each do |key, value|
            = content_tag :div, value, class: key
        .SigninPage__main__form--content
          .FormField
            = f.email_field :email, placeholder: "メールアドレス", class: "FormField__input"
            - if resource.errors.include?(:email)
              %p.AccountPage_error-message= resource.errors.full_messages_for(:email).first           

          .FormField
            = f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "FormField__input"
          .actions
            = f.submit "ログイン", class: 'Signin-button'
            = link_to new_user_password_path, class:"forgot-password" do
              パスワードをお忘れの方

              
    .AccountPage__footer