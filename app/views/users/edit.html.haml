.AccountEdit__main
= form_for(@user) do |f|
  .AccountEdit__main__form

    - if @image.present?
      = image_tag @image.url, class: 'account-page__inner--icon__input__image avatar_large'
    .FormField__image
    = f.file_field :image, class: 'account-page__inner--icon__input__btn', id: 'user_image'

    .FormField
      = f.label :nickname, class: "FormField__label"
      %span
      = f.text_field :nickname, autofocus: true, placeholder: "名前", class: "FormField__input"

    .FormField
    = f.label :introduction, class: "FormField__label"
    %span
    = f.text_area :introduction, autofocus: true, autocomplete: 'off', placeholder: "紹介", class: "FormField__input"

    .FormField
      = f.label :email, class: "FormField__label"
      %span
      = f.text_field :email, autofocus: true, placeholder: "メール", class: "FormField__input"


    = f.submit

    

  .account-page__inner--icon
    .account-page__inner--icon__label
    .account-page__inner--icon__input
