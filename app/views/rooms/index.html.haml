.row
  .col-md-3
    =render 'modules/sidebar'
  
  .col-md-7
    - @rooms.each do |room|
      .Roomlist
        .Roomlist__left
          .Roomlist__left__image
            - if room.room_images.length > 0
              =image_tag room.room_images[0].image.url, class: "avatar_large"
            - else
              =image_tag "no-image.png", class: "avatar_large"
          
          .Roomlist__left__main
            = link_to room_path(room.id) do
              .Roomlist__left__main__title
                =room.name
            .Roomlist__left__main__review
              - if room.guest_reviews.count > 0
                .Roomlist__left__main__review__star{id: "star-rate-#{room.id}"}
                  = room.like_ave
                  :javascript
                    $('#star-rate-#{room.id}').raty({
                      
                      starOff:  "#{asset_path('star-off.png')}",
                      starOn : "#{asset_path('star-on.png')}",
                      starHalf: "#{asset_path('star-half.png')}",
                      readOnly: true,
                      score: "#{room.like_ave}",
                    });
              - else
                .Roomlist__left__main__review__no-star
                  評価がありません
                  
              
        .Roomlist__right
          = link_to info_room_path(room) do
            .Roomlist__edit 編集
