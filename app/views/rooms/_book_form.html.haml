= form_for([@room, @room.books.new]) do |f|
  .MyRoom__book__title
    予約フォーム
  .MyRoom__book__form
    = f.text_field :start_date, placeholder: "宿泊開始日", class: 'BookForm', id: "datepicker7"
    %span →
    = f.text_field :end_date, placeholder: "宿泊終了日", class: 'BookForm', id: "datepicker8", disabled: true
  .alert-book#alert_book
  .MyRoom__book__price
    .MyRoom__book__price__one
      .MyRoom__book__price__price__right
        料金
      .MyRoom__book__price__price__left
        = "¥#{@room.price}"
    .MyRoom__book__price__one
      .MyRoom__book__price__dates__right
        泊数
      .MyRoom__book__price__dates__left
        2泊
    .MyRoom__book__price__one
      .MyRoom__book__price__total__right
        合計金額
      .MyRoom__book__price__total__left
        ￥20000
  
  .MyRoom__book__btn
    = f.submit "予約する", class: "BookBtn", id: 'not_permitted', disabled: true
      

:javascript
  
  $(function(){

    var disableDates = [];

    $.ajax({
      url: '/rooms/#{@room.id}/pickup',
      dateType: 'json'
    })
    .done(function(data) { 
      $.each(data, function(arrID, arrValue) {
        for(var date = new Date(arrValue.start_date);
                date <= new Date(arrValue.end_date);
                date.setDate(date.getDate() + 1)) {
        disableDates.push($.datepicker.formatDate('yy/m/d', date));
        }
      });
      
      $.datepicker.setDefaults( $.datepicker.regional[ "ja" ] );
      $('#datepicker7').datepicker({
        dateFormat: 'yy/mm/dd',
        minDate: 0,
        maxDate: '3m',
        beforeShowDay: function(date) {
                        d = date.getFullYear() + "/" + (date.getMonth() + 1) + "/" + date.getDate();
                        return [$.inArray(d, disableDates) == -1];
                      },
        onSelect: function(selected) {
                  $('#datepicker8').datepicker("option", "minDate", selected);
                  $('#datepicker8').attr("disabled", false);
                  }
      });

      $('#datepicker8').datepicker({
        dateFormat: 'yy/mm/dd',
          minDate: 0,
          maxDate: '3m',
          beforeShowDay: function(date) {
                        d = date.getFullYear() + "/" + (date.getMonth() + 1) + "/" + date.getDate();
                        return [$.inArray(d, disableDates) == -1];
                      },
          onSelect: function(selected) {
                  $('#datepicker7').datepicker("option", "maxDate ", selected);
                  
                  var start_date = $('#datepicker7').datepicker('getDate');
                  var end_date = $('#datepicker8').datepicker('getDate');

                  var input = {
                              'start_date': start_date,
                              'end_date': end_date
                            }
                  $.ajax({
                    url: '/rooms/#{@room.id}/check',
                    data: input,
                    dateType: 'json'
                  })
                  .done(function(data) {
                    if(data.overlap) {
                      $('#alert_book').text("空きがありません");
                      $('#not_permitted').attr('disabled', true);
                    } else {
                      $('#alert_book').text("");
                      $('#not_permitted').attr('disabled', false);
                    }
                  })
                }
      });
    });
  });