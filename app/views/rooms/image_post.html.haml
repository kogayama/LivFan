.row
  =render 'headbar'
  .col-md-12
    .RoomImage
      .RoomNew__header
        .RoomNew__header__title
          写真
      .RoomImage-body
        .container
          .row.RoomImage-row
            .col-md-offset-3.col-md-6
              = form_with url: room_room_images_path(@room), method: 'post', html: {multipart: true} do |f|
                .row
                  .form-group
                    .btn-file
                      = f.file_field :image, name: "images[]", class: 'img_field', multiple: true, style: 'display:none;'
                      = image_tag "image_preview.gif", onClick: "$('.img_field').click()", class: 'center-block img-thumbnail img-responsive img_prev',width: 500
                .FormField__btn.text-center
                  = f.submit "写真を追加", class: "btn btn-form"
                #images
                  - if @room_images.count
                    .row
                      - @room_images.each do |image|
                        .PhotoUpload_contents
                          = image_tag image.image.url(), class: "PhotoUpload-img"
                          %p
                            = link_to room_room_image_path(image.room_id, image), remote: true, method: :delete, data: {confirm: "本当によろしいですか？"} do
                              %i.far.fa-trash-alt

