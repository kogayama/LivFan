.row
  .col-md-3
    
    =render 'sidebar'
  .col-md-7
    
    .col-md-9
      .card
        .card-header
          写真
        .card-body
          .container
            .row.PhotoUpload-row
              .col-md-offset-3.col-md-6
                = form_with url: room_room_images_path(@room), method: 'post', html: {multipart: true} do |f|
                  .row
                    .form-group
                      .btn-file
                        ファイルを選択
                        = file_field_tag "images[]", type: :file, multiple: true
                  .FormField__btn.text-center
                    = f.submit "写真を追加", class: "btn btn-form"
